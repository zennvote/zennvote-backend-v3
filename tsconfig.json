{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "es2019",
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./types"],
    "declaration": true,
    "declarationDir": "./types",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "./src/", "test"
  ]
}